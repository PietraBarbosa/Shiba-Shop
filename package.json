{
  "name": "shiba-shop",
  "version": "0.1.0",
  "description": "Uma loja para líderes",
  "contributors": [
    {
      "name": "João Freire",
      "url": "https://github.com/"
    },
    {
      "name": "Pietra Barbosa",
      "url": "https://github.com/"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PietraBarbosa/Shiba-Shop"
  },
  "bugs": {
    "url": "https://github.com/PietraBarbosa/Shiba-Shop/issues"
  },
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env ENV=test TZ=America/Sao_Paulo jest --passWithNoTests --runInBand --no-cache",
    "test:watch": "pnpm t -- --watch --silent",
    "test:cov": "pnpm t -- --coverage",
    "test:staged": "pnpm t -- --findRelatedTests",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "pnpm t -- --config ./jest-e2e.config.ts",
    "start:bff": "nest start bff-main",
    "start:bff:dev": "nest start bff-main --watch",
    "start:bff:debug": "nest start bff-main --debug --watch",
    "start:bff:prod": "node dist/bff-main.js",
    "start:consumer": "nest start consumer-main",
    "start:consumer:dev": "nest start consumer-main --watch",
    "start:consumer:debug": "nest start consumer-main --debug --watch",
    "start:consumer:prod": "node dist/consumer-main.js",
    "start:monitor": "nest start monitor-main",
    "start:monitor:dev": "nest start monitor-main --watch",
    "start:monitor:debug": "nest start monitor-main --debug --watch",
    "start:monitor:prod": "node dist/monitor-main.js"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "3.817.0",
    "@aws-sdk/util-dynamodb": "3.817.0",
    "@bull-board/api": "6.9.6",
    "@bull-board/express": "6.9.6",
    "@bull-board/nestjs": "6.9.6",
    "@nestjs/bull": "11.0.2",
    "@nestjs/bullmq": "11.0.2",
    "@nestjs/common": "11.1.1",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.1",
    "@nestjs/cqrs": "11.0.3",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/mongoose": "11.0.3",
    "@nestjs/platform-express": "11.1.1",
    "@nestjs/typeorm": "11.0.0",
    "@ssut/nestjs-sqs": "3.0.1",
    "aws-sdk": "2.1692.0",
    "bull-board": "1.7.2",
    "bullmq": "5.53.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dotenv": "16.0.3",
    "express": "5.1.0",
    "jest-mock-extended": "3.0.4",
    "moment": "2.29.4",
    "pg": "8.16.0",
    "redis": "4.7.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "typeorm": "0.3.24"
  },
  "devDependencies": {
    "@nestjs/cli": "9.5.0",
    "@nestjs/schematics": "9.2.0",
    "@nestjs/testing": "11.1.1",
    "@types/express": "4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "cross-env": "7.0.3",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "git-commit-msg-linter": "4.9.4",
    "jest": "29.3.1",
    "jest-cucumber": "3.0.1",
    "lint-staged": "13.2.0",
    "mockdate": "3.0.5",
    "prettier": "2.3.2",
    "source-map-support": "0.5.20",
    "supertest": "6.1.3",
    "timekeeper": "2.2.0",
    "ts-jest": "29.0.3",
    "ts-loader": "9.2.3",
    "ts-node": "10.7.0",
    "ts-proto": "1.145.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "4.7.4"
  }
}
